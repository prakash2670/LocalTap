{
  "name": "localtap",
  "version": "1.0.0",
  "description": "Real-time keystroke and mouse activity tracker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "keystroke",
    "mouse",
    "tracker",
    "productivity"
  ],
  "author": "Guguloth Bhanu Prakash",
  "license": "MIT",
  "dependencies": {
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
  "appId": "com.bhanuprakash.localtap",
  "productName": "LocalTap",
  "win": {
    "target": "portable",
    "icon": "assets/icon.ico",
    "extraFiles": [
      "!darwin/**"
    ],
    "asar": true
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  }
}
}
